container Rekenstap
{
	container Stap_1 := Basis
	{
		container RuimtelijkeVraag := Basis/RuimtelijkeVraag
		{
			container Lokaal := Basis/RuimtelijkeVraag/Lokaal
			{
				container Generiek := Basis/RuimtelijkeVraag/Lokaal/Generiek
				{
					container GebouwOpties := Basis/RuimtelijkeVraag/Lokaal/Generiek/GebouwOpties
					{
						// criterium x -> Arrangement y;

						// @USERINPUT: 'Never', 'Always'
						parameter<string> geen:  ['Criteria/Always']; // geen labelsprong - behoud huidig label en installaties

						parameter<bool> KiesMaatschappelijk: [false], Descr = "maak maatschappelijke rentabiliteitsafweging indien true, anders obv eindgebruikerskosten";
					}
				}
				container BestaandeWoning := Generiek
				{
					container GebouwOpties := Basis/RuimtelijkeVraag/Lokaal/Generiek/GebouwOpties
					{
						// criterium x -> Arrangement y;

						// @USERINPUT: 'Never', 'Always'
						parameter<string> geen:    ['Criteria/Never'];   // geen labelsprong - behoud huidig label en installaties
						parameter<string> VRw:     ['Criteria/Never'];   // geen labelsprong - VR ketel zonder koeling
						parameter<string> HRw:     ['Criteria/NoAlloc']; // geen labelsprong - HR ketel zonder koeling
						parameter<string> NaarA_w: ['Criteria/Always'];  // Sprong naar label A - behoud huidig label en installaties
						parameter<string> NaarB_w: ['Criteria/Always'];  // Sprong naar label B - behoud huidig label en installaties
						parameter<string> NaarC_w: ['Criteria/Always'];  // Sprong naar label C - behoud huidig label en installaties
						parameter<string> NaarD_w: ['Criteria/Always'];  // Sprong naar label D - behoud huidig label en installaties
						parameter<string> LeWPw:   ['Criteria/Always'];  // Sprong naar label B - met luchtwarmtepomp
						parameter<string> LeWPw_A: ['Criteria/Always'];  // Sprong naar label A - met luchtwarmtepomp
						parameter<string> BeWPw:   ['Criteria/Always'];  // Sprong naar label B - met bodemwarmtepomp
						parameter<string> BeWPw_A: ['Criteria/Always'];  // Sprong naar label A - met bodemwarmtepomp
						parameter<string> HWP_D:   ['Criteria/Always'];  // Sprong naar label D - met hybride warmtepomp
						parameter<string> HWP_C:   ['Criteria/Always'];  // Sprong naar label C - met hybride warmtepomp
						parameter<string> HWP_A:   ['Criteria/Always'];  // Sprong naar label A - met hybride warmtepomp
						parameter<string> HWPw:    ['Criteria/Always'];  // Sprong naar label B - met hybride warmtepomp
					}
				}
				container BestaandeUtil   := Generiek
				{
					container GebouwOpties := Basis/RuimtelijkeVraag/Lokaal/Generiek/GebouwOpties
					{
						// criterium x -> Arrangement y;

						// @USERINPUT: 'Never', 'Always'
						parameter<string> geen:    ['Criteria/Never'];   // geen labelsprong - behoud huidig label en installaties
						parameter<string> VRu:     ['Criteria/Never'];   // geen labelsprong - VR ketel met airco voor koeling
						parameter<string> HRu :    ['Criteria/NoAlloc']; // geen labelsprong - HR ketel met airco voor koeling
						parameter<string> NaarB_u: ['Criteria/Always'];  // Sprong naar label B - behoud huidig label en installaties
						parameter<string> NaarC_u: ['Criteria/Always'];  // Sprong naar label C - behoud huidig label en installaties
						parameter<string> NaarD_u: ['Criteria/Always'];  // Sprong naar label D - behoud huidig label en installaties
						parameter<string> LeWPu:   ['Criteria/Always'];  // Sprong naar label B - met luchtwarmtepomp
						parameter<string> HWPu:    ['Criteria/Always'];  // Sprong naar label B - met hybride warmtepomp
						parameter<string> HWPu_C:  ['Criteria/Always'];  // Sprong naar label C - met hybride warmtepomp
						parameter<string> HWPu_D:  ['Criteria/Always'];  // Sprong naar label D - met hybride warmtepomp
						parameter<string> BeWPuG:  ['Criteria/isUtilGroot'];  // Sprong naar label B - met bodemwarmtepomp
						parameter<string> BeWPuK:  ['Criteria/isUtilKlein'];  // Sprong naar label B - met bodemwarmtepomp
					}
				}
				container BestaandeGlTb   := Generiek
				{
					container GebouwOpties := Basis/RuimtelijkeVraag/Lokaal/Generiek/GebouwOpties
					{
						// criterium x -> Arrangement y;

						// @USERINPUT: 'Never', 'Always'
						parameter<string> geen:    ['Criteria/Never'];   // geen labelsprong - behoud huidig label en installaties
						parameter<string> VRu:     ['Criteria/NoAlloc']; // geen labelsprong - VR ketel met airco voor koeling
						parameter<string> HRu :    ['Criteria/NoAlloc']; // geen labelsprong - HR ketel met airco voor koeling
					}
				}
				container NieuwbouwWoning := BestaandeWoning;
				container NieuwbouwUtil   := BestaandeUtil;
				container NieuwbouwGlTb   := BestaandeGlTb;
			}
		}
		container Voorkeuren := Basis/Voorkeuren
		{
			container GebiedsOpties
			{
				parameter<uint32> Aantal: [10];

				parameter<Classifications/GebiedsOptie> Optie1  := Classifications/GebiedsOptie/V/Restwarmte;
				parameter<Classifications/GebiedsOptie> Optie2  := Classifications/GebiedsOptie/V/Geothermie;
				parameter<Classifications/GebiedsOptie> Optie3  := Classifications/GebiedsOptie/V/BioWKK;
				parameter<Classifications/GebiedsOptie> Optie4  := Classifications/GebiedsOptie/V/Lt30_30;
				parameter<Classifications/GebiedsOptie> Optie5  := Classifications/GebiedsOptie/V/Lt30_50;
				parameter<Classifications/GebiedsOptie> Optie6  := Classifications/GebiedsOptie/V/Lt30_70;
				parameter<Classifications/GebiedsOptie> Optie7  := Classifications/GebiedsOptie/V/TEO;
				parameter<Classifications/GebiedsOptie> Optie8  := Classifications/GebiedsOptie/V/WKO;
				parameter<Classifications/GebiedsOptie> Optie9  := Classifications/GebiedsOptie/V/WaterstofWP;
				parameter<Classifications/GebiedsOptie> Optie10 := Classifications/GebiedsOptie/V/WaterstofHR;
			}
			container Afweging
			{
				parameter<bool>   LTversusWP   := false     , Descr = "indien true worden maatschappelijke kosten van eWP opgeteld bij contributiemarge TEO, LT en WKO (bij woningen met B of AP schillabel";
				parameter<bool>   AlwaysBIO    := false     , Descr = "indien true worden krijgen alle buurten bioWKK opgelegd ongeacht de rentabiliteitsafweging";
				parameter<bool>   AlwaysGEO    := false     , Descr = "indien true worden krijgen alle buurten geothermie opgelegd ongeacht de rentabiliteitsafweging";
				parameter<bool>   AlwaysH2     := false     , Descr = "indien true worden krijgen alle buurten waterstof opgelegd ongeacht de rentabiliteitsafweging";
				parameter<bool>   GEOcontour   := true      , Descr = "indien true worden bij geothermieafwegingen de contour voor kansgebieden gebruikt, bij false worden alle gebieden als kansrijk aangemerkt";
				parameter<Eur_GJ> OnrendabelMT := 0[Eur_GJ] , Descr = "extra ruimte om MT restwarmtenetten aan te leggen ondanks onrendabele toppen (als vervanging voor SDE)";
			}
		}
	}
}